{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

  <div class="col s12 m3 l5"></div>
    <h1>{{groupe.nom}}</h1>
  <div class="col s12 m3 l5"></div>
</div>
<div class="row">
  <div class="col s12 m3 l3"></div>
  <div class="input-field col s12 m6">
  <table>
    <tr>
      <th>Nom</th>
      <th>Prenom</th>
      <th>Promotion</th>
    </tr>
    {% for student in groupe.etudiants %}
      <tr>
        <td>{{student.nom}}</td>
        <td>{{student.prenom}}</td>
        <td>{{student.promotion}}</td>
      </tr>
    {% endfor %}
  </table>
<p></p>

      <table>
        <tbody>
          <tr>
            <a class="btn-floating btn-large " href="{{ path('groupe_index') }}">
              <i class="large material-icons">arrow_back</i>
            </a>
          </tr>
          <tr>

                <a class="btn-floating btn-large blue" href="{{ path('groupe_edit', { 'id': groupe.id }) }}">
                  <i class="large material-icons">mode_edit</i>
                </a>
          </tr>

          <tr>
            {{ form_start(delete_form) }}
              <button class="btn-floating btn-large red" type="submit" href="{{ path('groupe_edit', { 'id': groupe.id }) }}">
                  <i class="large material-icons">delete_forever</i>
              </button>
            {{ form_end(delete_form) }}
          </tr>
        </tbody>
      </table>


    <div class="col s12 m3 l3"></div>
  </div>

{% endblock %}
