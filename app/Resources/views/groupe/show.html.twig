{% extends 'base.html.twig' %}

{% block body %}
    <h1>Groupe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ groupe.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ groupe.nom }}</td>
            </tr>
            <tr>
                <th>Nbpointglobal</th>
                <td>{{ groupe.nbpointglobal }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{% if groupe.annee %}{{ groupe.annee|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ groupe.code }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('groupe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('groupe_edit', { 'id': groupe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
