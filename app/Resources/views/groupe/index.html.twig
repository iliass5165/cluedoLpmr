{% extends 'base.html.twig' %}

{% block body %}

<div class="row">

  <div class="col s12 m3 l5"></div>
    <h1>Groupes list</h1>
  <div class="col s12 m3 l5"></div>
</div>
<div class="row">
  <div class="col s12 m3 l3"></div>
  <div class="input-field col s12 m6">


    <table  class="striped" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nbpointglobal</th>
                <th>Annee</th>
                <th>Code</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for groupe in groupes %}
            <tr>
                <td><a href="{{ path('groupe_show', { 'id': groupe.id }) }}">{{ groupe.id }}</a></td>
                <td>{{ groupe.nom }}</td>
                <td>{{ groupe.nbpointglobal }}</td>
                <td>{% if groupe.annee %}{{ groupe.annee|date('Y-m-d') }}{% endif %}</td>
                <td>{{ groupe.code }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('groupe_show', { 'id': groupe.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('groupe_edit', { 'id': groupe.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn-floating btn-large waves-effect waves-light red" href="{{ path('groupe_new') }}"><i class="material-icons">add</i></a>
        </li>
    </ul>

  </div>
  <div class="col s12 m3 l3"></div>
</div>


{% endblock %}
