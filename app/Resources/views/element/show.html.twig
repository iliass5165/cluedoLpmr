{% extends 'base.html.twig' %}

{% block body %}
  
<div class="row">

  <div class="col s12 m3 l5"></div>
     <h1>Element</h1>
  <div class="col s12 m3 l5"></div>
</div>
<div class="row">
  <div class="col s12 m3 l3"></div>
  <div class="input-field col s12 m6">

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ element.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ element.nom }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ element.url }}</td>
            </tr>
        </tbody>
    </table>

<p></p>

      <table>
        <tbody>
          <tr>
            <a class="btn-floating btn-large " href="{{ path('scenario_index') }}">
              <i class="large material-icons">arrow_back</i>
            </a>
          </tr>
          <tr>

                <a class="btn-floating btn-large blue" href="{{ path('element_edit', { 'id': element.id }) }}">
                  <i class="large material-icons">mode_edit</i>
                </a>
          </tr>

          <tr>
            {{ form_start(delete_form) }}
              <button class="btn-floating btn-large red" type="submit" href="{{ path('element_edit', { 'id': element.id }) }}">
                  <i class="large material-icons">delete_forever</i>
              </button>
            {{ form_end(delete_form) }}
          </tr>
        </tbody>
      </table>


{% endblock %}
