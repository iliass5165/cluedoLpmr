{% extends 'base.html.twig' %}

{% block body %}
    <div class="col s12 m3 l3"></div>
      <h1>Scenario creation</h1>

    <div class="row">
      <div class="col s12 m3 l3"></div>
      <div class="col s12 m6">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="col s12 m3 l3"></div>

        {{ form_end(form) }}
      <div class="col s12 m3 l3"></div>
      <p></p>
    </div>
  </div>


    <div class="row" >
      <div class="col s12 m3 l3"></div>
      <div class="col s12 m6">
        <ul class="collapsible blue-grey" data-collapsible="accordion">
          <!-- Liste des armes -->
          <li>
            <div class="collapsible-header "><i class="material-icons circle">highlight_off</i>Armes</div>
            <div class="collapsible-body #eeeeee grey lighten-3" >
              <div class="row">
                {% for element in elements %}
                    {% if(element.fkCategorieElement.id==1) %}
                      <div class="col s12 m4">
                          <div class="card">
                              <div class="card-image">
                                  <img src="../../images/rj45.jpg">
                              </div>
                              <div class="card-content" style="text-align:center;">
                                  <input name='check_armes' type="checkbox" id="arme_{{ element.id }}"   />
                                  <label for='arme_{{ element.id }}'>{{ element.nom }}</label>
                              </div>
                              <div class="card-action" style="text-align:center;">
                                  <a class="btn-floating btn-large " href="{{ path('element_show', { 'id': element.id }) }}">
                                      <i class="large material-icons">info</i>
                                  </a>
                                  <a class="btn-floating btn-large blue" href="{{ path('element_edit', { 'id': element.id }) }}">
                                      <i class="large material-icons">mode_edit</i>
                                  </a>
                              </div>
                          </div>
                      </div>
                    {% endif %}
                {% endfor %}
              </div>
              <a class="btn-floating waves-effect waves-light red"  href="{{ path('element_new', { 'id': 1 }) }}"><i class="material-icons">add</i></a>
            </div>
          </li>
          <!-- Liste des armes -->
          <!-- Liste des lieux -->
          <li>
            <div class="collapsible-header"><i class="material-icons circle ">room</i>Lieux</div>
            <div class="collapsible-body #eeeeee grey lighten-3" >
              <div class="row">
                {% for element in elements %}
                    {% if(element.fkCategorieElement.id==3) %}
                      <div class="col s12 m4">
                          <div class="card">
                              <div class="card-image">
                                  <img src="../../images/map.png">
                              </div>
                              <div class="card-content" style="text-align:center;">
                                  <input name='check_lieux' type="checkbox" id="lieu_{{ element.id }}" />
                                  <label for='lieu_{{ element.id }}'>{{ element.nom }}</label>
                              </div>
                              <div class="card-action" style="text-align:center;">
                                  <a class="btn-floating btn-large " href="{{ path('element_show', { 'id': element.id }) }}">
                                      <i class="large material-icons">info</i>
                                  </a>
                                  <a class="btn-floating btn-large blue" href="{{ path('element_edit', { 'id': element.id }) }}">
                                      <i class="large material-icons">mode_edit</i>
                                  </a>
                              </div>
                          </div>
                      </div>
                    {% endif %}
                {% endfor %}
              </div>
              <a class="btn-floating waves-effect waves-light red"  href="{{ path('element_new', { 'id': 3 }) }}"><i class="material-icons">add</i></a>
            </div>
          </li>
          <!-- Liste des lieux -->
          <!-- liste des personages -->
          <li>
            <div class="collapsible-header"><i class="material-icons circle">person</i>Personnages</div>
            <div class="collapsible-body #eeeeee grey lighten-3" >
              <div class="row">
                {% for element in elements %}
                    {% if(element.fkCategorieElement.id==2) %}
                      <div class="col s12 m4">
                          <div class="card">
                              <div class="card-image">
                                  <img src="../../images/person.png">
                              </div>
                              <div class="card-content" style="text-align:center;">
                                  <input name='check_persos' type="checkbox" id="perso_{{ element.id }}" />
                                  <label for='perso_{{ element.id }}'>{{ element.nom }}</label>
                              </div>
                              <div class="card-action" style="text-align:center;">
                                  <a class="btn-floating btn-large " href="{{ path('element_show', { 'id': element.id }) }}">
                                      <i class="large material-icons">info</i>
                                  </a>
                                  <a class="btn-floating btn-large blue" href="{{ path('element_edit', { 'id': element.id }) }}">
                                      <i class="large material-icons">mode_edit</i>
                                  </a>
                              </div>
                          </div>
                      </div>
                    {% endif %}
                {% endfor %}
              </div>
              <a class="btn-floating waves-effect waves-light red"  href="{{ path('element_new', { 'id': 2 }) }}"><i class="material-icons">add</i></a>
            </div>
          </li>
          <!-- liste des personnages -->
        </ul>
        </div>
      </div>
      
    

    <div class="col s12 m3 l3"></div>

    <a class="btn-floating btn-large " href="{{ path('groupe_index') }}">
      <i class="large material-icons">arrow_back</i>
    </a>

    
    
     

{% endblock %}
